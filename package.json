{
  "name": "blog-builder",
  "version": "0.1.0",
  "description": "AI-powered blog content strategy and generation tool for Medium and LinkedIn",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "blog-builder": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "blog",
    "content",
    "ai",
    "claude",
    "medium",
    "linkedin",
    "seo",
    "marketing",
    "cli"
  ],
  "author": "Chris Therriault <chris@servicevision.net>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dbbuilder-org/blog-builder.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "axios": "^1.7.9",
    "chalk": "^5.3.0",
    "cheerio": "^1.0.0",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "ora": "^8.1.1",
    "playwright": "^1.49.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
